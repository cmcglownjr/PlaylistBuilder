<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:PlaylistBuilder.GUI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PlaylistBuilder.GUI.Views.PreferenceWindow"
        Width="300" Height="500"
        Title="PreferenceWindow">
    <Window.Styles>
        <StyleInclude Source="/Assets/DefaultStyle.axaml"/>
    </Window.Styles>
    <Design.DataContext>
        <viewModels:MainWindowViewModel/>
    </Design.DataContext>
    <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top">
        <TextBlock>File Path Mode</TextBlock>
        <StackPanel Orientation="Horizontal">
            <RadioButton x:Name="AbsoluteRadio" GroupName="FilePathRadio" IsChecked="True" Margin="10">Absolute Paths</RadioButton>
            <RadioButton x:Name="RelativeRadio" GroupName="FilePathRadio" Margin="10">Relative Paths</RadioButton>
        </StackPanel>
    </StackPanel>
</Window>
